<!DOCTYPE html>
<html>
	<head>
	<title><%= title %></title>
    <script type="text/javascript" src="/js/jquery-2.1.1.min.js"></script>
    <script src="/js/register.js"></script>
    <script src="/js/md5-min.js"></script>
	<script type="text/javascript" src="/js/scanlines.js"></script>
    <link rel='stylesheet' href='/css/style.css' />
    <script>
    </script>
	</head>
	<body class="user-form">
        <div id="cover"><div id="line"><div id="dot"></div></div></div>
        <div id="content">
            <h1><%= title %></h1>
            <div id="error"></div>
            <div id="register">
                <form name="register" action="/register" method="post">
                    <input type="text" name="displayName" placeholder="What name on your tombstone?" autofocus>
                    <br>
                    <input type="text" name="emailAddress" placeholder="Where to send the e-card?">
                    <br>
                    <input type="password" name="password" placeholder="Your Security Key">
                    <br>
                    <input type="password" name="confirm" placeholder="Security Key autocorrect validation">
                    <br>
                    <input type="submit" value="I am ready to do battle!" name="Submit">
                </form>
            </div>
        </div>
	</body>
</html>
